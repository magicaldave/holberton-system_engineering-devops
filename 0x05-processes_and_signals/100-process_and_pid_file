#!/usr/bin/env bash
# This script is an endless loop which prints "to infinity and beyond" with a wait of two second in between
trap 'echo "I hate the kill command" ; rm /var/run/myscript.pid ; exit' 15
trap 'echo "Y U no LOVE ME?!"' 2
trap 'rm /var/run/myscript.pid ; exit' 3
echo $$  > /var/run/myscript.pid
while BUZZLIGHTYEAR="To infinity and beyond"
do printf "%s\n" "$BUZZLIGHTYEAR"
   sleep 2
done
