#!/usr/bin/env bash
# This script is an endless loop which prints "to infinity and beyond" with a wait of two second in between
pgrep -f "100-process_and_pid_file" >> /var/run/myscript.pid
while BUZZLIGHTYEAR="To infinity and beyond"
do trap 'echo "I hate the kill command" ; rm /var/run/my.pid ; exit' 15
   trap 'echo "Y U no LOVE ME?!" ; rm /var/run/my.pid ; exit' 2
   echo "$BUZZLIGHTYEAR"
   sleep 2
done
