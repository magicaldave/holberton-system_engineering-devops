#!/usr/bin/env bash
# This script is an endless loop which prints "to infinity and beyond"
# With a wait of two seconds in between
trap 'echo "I hate the kill command" ; rm -rf /var/run/myscript.pid ; exit' SIGTERM
trap 'echo "Y U no LOVE ME?!"' SIGINT
trap 'rm -rf /var/run/myscript.pid ; exit' SIGQUIT
echo $$  > /var/run/myscript.pid
while BUZZLIGHTYEAR="To infinity and beyond"
do printf "%s\n" "$BUZZLIGHTYEAR"
   sleep 2
done
